{
  "name": "opencc-extension",
  "version": "0.3.2",
  "description": "A browser extension to convert webpages between different Chinese variants.",
  "repository": "github:tnychn/opencc-extension",
  "author": {
    "name": "Tony Chan",
    "email": "tonychan2342@gmail.com",
    "url": "https://github.com/tnychn"
  },
  "license": "MIT",
  "scripts": {
    "build:prod": "webpack --config webpack.config.js --mode production",
    "build:watch": "webpack --config webpack.config.js --mode development --watch",
    "run:build": "web-ext run -s ./build",
    "start:firefox": "concurrently \"yarn build:watch --env BROWSER='firefox'\" \"wait-on ./build/manifest.json && yarn run:build\"",
    "start:chromium": "concurrently \"yarn build:watch --env BROWSER='chrome'\" \"wait-on ./build/manifest.json && yarn run:build -t chromium\"",
    "dist:chrome": "yarn build:prod --env BROWSER=\"chrome\" --output-path ./dist/chrome && web-ext build -s ./dist/chrome -a . -n opencc.chrome.zip",
    "dist:firefox": "yarn build:prod --env BROWSER=\"firefox\" --output-path ./dist/firefox && web-ext build -s ./dist/firefox -a . -n opencc.firefox.zip",
    "dist": "yarn dist:chrome && yarn dist:firefox && rm -rf ./dist"
  },
  "dependencies": {
    "opencc-js": "^1.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/eslint-parser": "^7.14.7",
    "@babel/preset-env": "^7.14.7",
    "@types/chrome": "^0.0.164",
    "@types/opencc-js": "^1.0.0",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.2.0",
    "copy-webpack-plugin": "^10.0.0",
    "css-loader": "^6.5.1",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "html-webpack-plugin": "^5.3.2",
    "mini-css-extract-plugin": "^2.0.0",
    "prettier": "^2.0.5",
    "wait-on": "^6.0.0",
    "web-ext": "^6.2.0",
    "webpack": "^5.41.1",
    "webpack-cli": "^4.7.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 120
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "browser": true,
      "webextensions": true
    },
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "plugins": [
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ]
  }
}
