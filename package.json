{
  "name": "opencc-extension",
  "version": "0.2.0",
  "description": "A browser extension to convert webpages between different Chinese variants.",
  "repository": "github:tnychn/opencc-extension",
  "author": {
    "name": "Tony Chan",
    "email": "tonychan2342@gmail.com",
    "url": "https://github.com/tnychn"
  },
  "license": "MIT",
  "scripts": {
    "build:run": "web-ext run -s ./build",
    "build:watch": "webpack --config webpack.config.js --mode development --watch",
    "start:firefox": "concurrently \"yarn build:watch\" \"wait-on ./build/manifest.json && yarn build:run --start-url about:debugging\"",
    "start:chromium": "concurrently \"yarn build:watch\" \"wait-on ./build/manifest.json && yarn build:run -t chromium\"",
    "build": "webpack --config webpack.config.js --mode production",
    "zip": "yarn build --output-path ./opencc && cd ./opencc && zip -r ../opencc.zip * && cd .. && rm -r ./opencc"
  },
  "dependencies": {
    "opencc-js": "^1.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/eslint-parser": "^7.14.7",
    "@babel/preset-env": "^7.14.7",
    "@types/chrome": "^0.0.145",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.2.0",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^5.2.6",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.1.4",
    "html-webpack-plugin": "^5.3.2",
    "mini-css-extract-plugin": "^2.0.0",
    "prettier": "^2.0.5",
    "wait-on": "^6.0.0",
    "web-ext": "^6.2.0",
    "webpack": "^5.41.1",
    "webpack-cli": "^4.7.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 120
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "browser": true,
      "webextensions": true
    },
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "plugins": [
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ]
  }
}
